{
  "name": "@lingualeap/shared",
  "version": "1.0.0",
  "description": "Shared types, utilities, and constants for LinguaLeap",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "lingualeap",
    "shared",
    "types",
    "utilities"
  ],
  "author": "LinguaLeap Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.4.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "zod": "^3.24.1"
  }
}
